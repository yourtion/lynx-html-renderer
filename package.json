{
  "name": "lynx-html-renderer",
  "version": "0.4.0",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "import": "./src/index.tsx",
      "default": "./src/index.tsx"
    },
    "./html-parser": {
      "types": "./src/html-parser.ts",
      "import": "./src/html-parser.ts",
      "default": "./src/html-parser.ts"
    },
    "./transform": {
      "types": "./src/transform/types.ts",
      "import": "./src/transform/types.ts",
      "default": "./src/transform/types.ts"
    },
    "./dist/styles.css": "./dist/styles.css",
    "./dist/styles.min.css": "./dist/styles.min.css"
  },
  "scripts": {
    "build-example": "pnpm generate:css && cd example && rspeedy build",
    "check": "biome check --write",
    "dev": "cd example && rspeedy dev",
    "format": "biome format --write",
    "preview": "cd example && rspeedy preview",
    "test": "vitest run",
    "coverage": "vitest run --coverage --coverage.include='src/**'",
    "coverage:ci": "vitest run --coverage --coverage.include='src/**' --reporter=junit --outputFile=test-report.junit.xml",
    "docs:dev": "rspress dev",
    "docs:build": "rspress build",
    "tag": "git tag v`node -p 'require(\"./package\").version'`",
    "postpublish": "pnpm tag && git push && git push --tags",
    "prepublishOnly": "pnpm generate:css",
    "generate:css": "tsx scripts/generate-css.ts"
  },
  "files": [
    "src",
    "dist"
  ],
  "peerDependencies": {
    "@lynx-js/react": "^0.115.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@codecov/webpack-plugin": "^1.9.1",
    "@lynx-js/preact-devtools": "^5.0.1-cf9aef5",
    "@lynx-js/qrcode-rsbuild-plugin": "^0.4.3",
    "@lynx-js/react": "^0.115.1",
    "@lynx-js/react-rsbuild-plugin": "^0.12.1",
    "@lynx-js/rspeedy": "^0.12.2",
    "@lynx-js/types": "3.4.11",
    "@rsbuild/plugin-type-check": "1.3.1",
    "@testing-library/jest-dom": "^6.9.0",
    "@types/react": "^18.3.25",
    "@vitest/coverage-v8": "3.2.4",
    "jsdom": "^26.1.0",
    "rspress": "^1.47.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.18.20"
    }
  },
  "dependencies": {
    "htmlparser2": "^10.0.0"
  }
}
